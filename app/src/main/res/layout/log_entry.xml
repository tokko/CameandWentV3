<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:text="Project:"
        android:id="@+id/project_label"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/project_name"
        android:text="Project name placeholder"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/project_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/timestamp_label"
        android:text="Time: "
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/project_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/timestamp"
        android:text="Timestamp placeholder"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/timestamp_label"
        app:layout_constraintTop_toBottomOf="@+id/project_label" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/action_label"
        android:text="Action: "
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/timestamp_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/action"
        android:text="action placeholder"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/action_label"
        app:layout_constraintTop_toTopOf="@+id/action_label" />
</android.support.constraint.ConstraintLayout>